---
import type { CollectionEntry } from 'astro:content';
import { getArtworkImagePath } from '../utils/imagePaths';
interface Props {
  id: string;
  data: CollectionEntry<'collections'>['data'];
}

const { id, data } = Astro.props;
---

<a href={`/collections/${id}`} class="collection glass-card">
  <div class="collection-inner">
    <div class="collection-image-container">
      <img
        src={getArtworkImagePath(data.coverImage)}
        alt={data.name}
        loading="lazy"
      />
    </div>
    <div class="collection-info">
      <h3>{data.name}</h3>
      <p>{data.description}</p>
    </div>
    <div class="collection-overlay"></div>
  </div>
</a>

<style>
  .collection {
    position: relative;
    aspect-ratio: 12/9;
    overflow: hidden;
    border-radius: 20px;
    cursor: pointer;
    perspective: 1500px;
    text-decoration: none;
    display: block;
    transform: translateZ(0);
    padding: 1.2rem;
  }

  .collection-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .collection:hover .collection-inner {
    transform: rotateY(12deg) rotateX(8deg) translateZ(20px);
  }

  .collection-image-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .collection img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.05);
    transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform;
  }

  .collection:hover img {
    transform: scale(1.12);
  }

  .collection-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      45deg,
      rgba(var(--quantum-red-rgb), 0.15),
      rgba(var(--quantum-blue-rgb), 0.15)
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .collection:hover .collection-overlay {
    opacity: 1;
  }

  .collection-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    background: linear-gradient(transparent, rgba(0,0,0,0.85));
    transform: translateY(100%);
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 1;
  }

  .collection:hover .collection-info {
    transform: translateY(0);
  }

  h3 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(45deg, var(--quantum-white), var(--quantum-blue));
    -webkit-background-clip: text;
    color: transparent;
  }

  p {
    color: var(--quantum-white);
    opacity: 0.8;
    font-size: 1.1rem;
    line-height: 1.4;
  }
</style> 