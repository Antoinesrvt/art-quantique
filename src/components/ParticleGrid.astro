---
import TheoryCard from './TheoryCard.astro';

const particles = [
  {
    title: "Particule Antagoniste",
    description: "Le noir représente la force fondamentale, liant les extrêmes de l'espace-temps.",
    color: "var(--quantum-black)"
  },
  {
    title: "Électron",
    description: "Le bleu symbolise l'énergie pure et le mouvement constant.",
    color: "var(--quantum-blue)"
  },
  {
    title: "Positron",
    description: "Le rouge incarne la conscience et la mécanique cognitive.",
    color: "var(--quantum-red)"
  },
  {
    title: "Photon",
    description: "Le jaune représente la lumière et l'interaction électromagnétique.",
    color: "var(--quantum-yellow)"
  },
  {
    title: "Neutrino",
    description: "Le blanc symbolise la mémoire et la connexion au vivant.",
    color: "var(--quantum-white)"
  }
];
---

<div class="particle-grid">
  {
    particles.map((particle) => (
      <TheoryCard
        title={particle.title}
        description={particle.description}
        color={particle.color}
      />
    ))
  }
</div>

<style>
  .particle-grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
</style> 